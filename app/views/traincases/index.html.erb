<div class="row">
  <div class="hide-for-small-only medium-12 large-12 columns header2">
    <div class="header3">
      <span class="main-title animated fadeIn">Traincase</span>
      <p class="lead animated fadeIn" style="padding: 0 15px">Things I have</p>
    </div>
  </div>

  <div class="show-for-small-only small-12 columns">
    <span style="font-size: 2rem; color: #fff">Traincase</span> <br>
    <div style="padding: 5px">Things I have</div>
  </div>
</div>
<br>

<div class="row small-up-1 medium-up-2 large-up-3">

<% if @traincase.length > 0 %>

  <% @traincase.each do |item| %>
    <div class="column">
      <div class="callout product-box">
        <p><a href="/products/<%= item.id %>"><%= image_tag "#{item.image}", class: 'thumbnail' %></a></p>
        <p class="lead"><%= link_to "#{item.name.upcase}", "/products/#{item.id}" %></p>
        <p class="subheader"><%= item.brand %></p>
      </div>
    </div>
  <% end %>

<% else %>
  <p>No products added yet.</p>
<% end %>

</div>